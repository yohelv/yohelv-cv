---
import Layout from "@/layouts/Layout.astro"

import About from "@/components/sections/About.astro"
import Education from "@/components/sections/Education.astro"
import Experience from "@/components/sections/Experience.astro"
import Hero from "@/components/sections/Hero.astro"
import OtherExperiances from "@/components/sections/OtherExperiances.astro"
import Skills from "@/components/sections/Skills.astro"
import KeyboardManager from "@/components/KeyboardManager.astro"
import { basics } from "@cv"
import Certificates from "@/components/sections/Certificates.astro"
import Language  from "@/components/sections/Language.astro"
const { name, label } = basics
---

<Layout title={`${name} - ${label}`}>
  <main>
    <Hero />
    <About />
    <Experience />
    <Certificates/>
    <Education />
    <!-- <Language /> -->
    <OtherExperiances />
    <!-- <Skills /> -->
  </main>

  <KeyboardManager />
</Layout>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem;
    }
  }
</style>
